{
  "name": "odata-service",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^8",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@cap-js/cds-types": "^0.9.0"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "cors": {
        "enabled": true,
        "allowedOrigins": [
          "*"
        ],
        "allowedHeaders": [
          "Content-Type",
          "Authorization",
          "Accept",
          "x-csrf-token"
        ],
        "allowedMethods": [
          "GET",
          "POST",
          "PUT",
          "DELETE",
          "OPTIONS"
        ],
        "exposedHeaders": [
          "x-csrf-token"
        ]
      }
    }
  }
}
