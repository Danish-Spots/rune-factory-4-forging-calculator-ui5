<mvc:View
   controllerName="rf.calculator.controller.MaterialList"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core">
   <List
        id="materialList"
        headerText="{i18n>materialListTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
        growing="true"
        growingThreshold="250"
        items="{
            path: 'data>/Materials',
            parameters: {
                $count: true
            }
        }" >
      <headerToolbar>
        <Toolbar>
            <Title text="{data>/Materials/$count} - {i18n>materialListTitle}"></Title>
            <ToolbarSpacer></ToolbarSpacer>
            <SearchField 
                width="50%"
                search=".onFilterMaterials"></SearchField>
        </Toolbar>
      </headerToolbar>
      <items>
         <ObjectListItem
            title="{data>Name} - {data>Category}"
            number="{data>Rarity}"
            type="Navigation"
            press=".onPress">
            <!-- <firstStatus>
                <ObjectStatus core:require="{
                        Formatter: 'rf/calculator/model/formatter'
                    }"
                    text="{ 
                        path: 'data>StatInfo',
                        formatter: 'Formatter.statInfos.bind($controller)'
                    }"
                ></ObjectStatus>
            </firstStatus> -->
        </ObjectListItem>
      </items>
   </List>
</mvc:View>
