<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:cards="sap.f.cards"
  xmlns:core="sap.ui.core">
  <WizardStep id="ForgingUpgradingStep"
    validated="false"
    title="Product Information"
    activate="additionalInfoValidation">
    <MessageStrip class="sapUiSmallMarginBottom"
      text="Here you can set the material to be used in each of the squares."
      showIcon="true"/>
    <Title text="Forging" class="sapUiSmallMarginBottom"/>
    <core:Fragment fragmentName="rf.calculator.view.fragment.MaterialCard" type="XML"/>
    <Title text="Preview" />
    <VBox items="{/forgePreview/Preview}" >
      <HBox items="{results}" renderType="Div">
        <items>
          <HBox >
            <Text text="{key}" class="sapUiSmallMargin"/>
            <Text text="{value}" class="sapUiSmallMargin"></Text>
          </HBox>
        </items>
      </HBox>
    </VBox>
  </WizardStep>
</core:FragmentDefinition>
