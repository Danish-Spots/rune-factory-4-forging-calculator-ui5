<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:cards="sap.f.cards"
  xmlns:core="sap.ui.core"
  xmlns:rf="rf.calculator.control">
  <WizardStep id="ForgingUpgradingStep"
    validated="false"
    title="Forging"
    activate="additionalInfoValidation">
    <MessageStrip class="sapUiSmallMarginBottom"
      text="Here you can set the materials and their levels to be used in the forging process. Finally choosing a desired inheritance outcome."
      showIcon="true"/>
    <Title text="Forging" class="sapUiSmallMarginBottom"/>
    <core:Fragment fragmentName="rf.calculator.view.fragment.MaterialCard" type="XML"/>
    <Title text="Preview" class="sapUiSmallMarginBottom sapUiSmallMarginTop"/>

    <Table
      mode="SingleSelectLeft"
      includeItemInSelection="true"
      items="{/forge/Preview}">
      <columns>
        <Column>
          <Text text="Primary stats"></Text>
        </Column>
        <Column >
          <Text text="Secondary stats"/>
        </Column>
      </columns>
      <items>
        <ColumnListItem >
          <cells>
            <rf:StatRender
              stats="{mPath: 'primaryStats', sHtml: 'html'}">
            </rf:StatRender>
            <rf:StatRender
              stats="{mPath: 'secondaryStats', sHtml: 'html'}"/>
          </cells>
        </ColumnListItem>
      </items>
    </Table>
    <rf:ForgePreview outcomes="{/forge/Preview}"/>

    <!-- <List
      items="{/forge/Preview}"
      mode="SingleSelectLeft"
      includeItemInSelection="true">
      <CustomListItem>
        <HBox class="sapUiSmallMarginBottom sapUiSmallMarginTop">
          <rf:StatRender
            stats="{mPath: 'primaryStats', sHtml: 'html'}"
            />
          <rf:StatRender
            stats="{mPath: 'secondaryStats', sHtml: 'html'}"
            class="sapUiLargeMarginBegin"/>
        </HBox>
      </CustomListItem>
    </List> -->

  </WizardStep>
</core:FragmentDefinition>
