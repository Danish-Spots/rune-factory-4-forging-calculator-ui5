<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:rf="rf.calculator.control"
  xmlns:core="sap.ui.core"
  xmlns:cards="sap.f.cards">
  <FlexBox wrap="Wrap" id="WeaponMaterialCards" items="{/forge/Materials}" gap="1rem">
    <f:Card>
      <f:header>
        <cards:Header title="{Header_Name}" ></cards:Header>
      </f:header>
      <f:content>
        <VBox >
          <rf:MaterialComboBox
            fieldName="{Field_Name}"
            selectedItem="{Material}"
            items="{= ${Select_Query} ? ${Select_Query} : ${/selectedItems} }"
            selectionChange=".onMaterialSelected">
          </rf:MaterialComboBox>
          <Label
            text="Material Level"
            ></Label>
          <rf:LevelSlider
            fieldName="{Field_Name}"
            value="{Material/Level}"
            change=".onLevelChange"/>
          <rf:StatRender
            fieldName="{Field_Name}"
            stats="{
              mPath: 'Material/Stats',
              sHtml: 'Stat_HTML'
            }"
            class="sapUiMediumMarginBottom" />
        </VBox>
      </f:content>

    </f:Card>
  </FlexBox>
  </core:FragmentDefinition>
