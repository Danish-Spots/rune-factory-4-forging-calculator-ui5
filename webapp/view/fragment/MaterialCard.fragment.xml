<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:rf="rf.calculator.control"
  xmlns:core="sap.ui.core"
  xmlns:cards="sap.f.cards">
  <FlexBox wrap="Wrap" id="WeaponMaterialCards" items="{/selectedWeapon/Materials}" gap="1rem">
    <f:Card>
      <f:header>
        <cards:Header title="{Material_Name}" ></cards:Header>
      </f:header>
      <f:content>
        <VBox >
          <rf:MaterialSelect
            fieldName="{Field_Name}"
            query="{Query}"
            materials="{/selectedItems}"
            materialId="{Material_ID}"
            selectionChange=".onMaterialSelected">
          </rf:MaterialSelect>
          <Label
            text="Material Level"
            ></Label>
          <rf:LevelSlider
            fieldName="{Field_Name}"
            change=".onLevelChange"/>
          <rf:StatRender
            fieldName="{Field_Name}"
            stats="{
              matPath: '/forgePreview/Materials/Key/Stats',
              htmlPath: 'Stat_HTML'
            }"
            class="sapUiMediumMarginBottom" />
        </VBox>
      </f:content>
    </f:Card>
  </FlexBox>
  </core:FragmentDefinition>
