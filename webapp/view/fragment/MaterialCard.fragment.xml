<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:rf="rf.calculator.control"
  xmlns:core="sap.ui.core"
  xmlns:cards="sap.f.cards">
  <FlexBox wrap="Wrap" id="WeaponMaterialCards" items="{/selectedWeapon/Materials}">
    <f:Card>
      <f:header>
        <cards:Header title="{Material_Name}" ></cards:Header>
      </f:header>
      <f:content>
        <VBox >
          <rf:MaterialSelect
            fieldName="{Field_Name}"
            query="{Query}"
            materials="/selectedItems"
            selectionChange=".onMaterialSelected">
          </rf:MaterialSelect>
          <!-- <Select
            visible="{= !${Is_Locked}}"
            items="{= ${Is_Category_Weapon} ? ${ { path: 'data>/Materials' } } : ${/selectedMaterials} }"></Select> -->
          <Slider value="1" width="100%"
            min="1" max="15"
            showAdvancedTooltip="true"
            showHandleTooltip="false"
            inputsAsTooltips="true"
            class="sapUiMediumMarginBottom" />
        </VBox>
      </f:content>
    </f:Card>
  </FlexBox>
  </core:FragmentDefinition>
