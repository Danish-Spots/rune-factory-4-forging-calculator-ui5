<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:rf="rf.calculator.control"
  xmlns:core="sap.ui.core"
  xmlns:cards="sap.f.cards">
  <FlexBox wrap="Wrap" items="{Materials}" gap="1rem">
    <f:Card>
      <f:header>
        <cards:Header title="{Header_Name}" ></cards:Header>
      </f:header>
      <f:content>
        <VBox >
          <rf:MaterialComboBox
            selectedItem="{Material}"
            items="{= ${Select_Query} ? ${Select_Query} : ${/selectedItems} }"
            selectionChange=".onMaterialSelected">
          </rf:MaterialComboBox>
          <Label
            text="Material Level"
            ></Label>
          <Slider
            value="{Material/Level}"
            min="1"
            max="10"
            step="1"
            width="100%"
            showAdvancedTooltip="true"
				    showHandleTooltip="false"
				    inputsAsTooltips="true"
            change=".onLevelChange"
            ></Slider>
          <!-- <rf:LevelSlider
            value="{Material/Level}"
            change=".onLevelChange"/> -->
          <rf:StatRender
            stats="{
              mPath: 'Material/Stats',
              sHtml: 'Stat_HTML'
            }"
            class="sapUiMediumMarginBottom" />
        </VBox>
      </f:content>

    </f:Card>
  </FlexBox>
  </core:FragmentDefinition>
