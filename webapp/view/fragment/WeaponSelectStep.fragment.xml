<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core">
  <WizardStep
    nextStep="MaterialChoiceStep"
    id="WeaponChoiceStep"
    title="Choose weapon recipe">
    <MessageStrip class="sapUiSmallMarginBottom"
      showIcon="true"
      text="Choose a weapon to have a starting point for forging. If no recipe is chosen, outcome is based purely on chosen materials."></MessageStrip>
    <Table
      id="weaponTable"
      mode="SingleSelectMaster"
      sticky="HeaderToolbar"
      selectionChange=".onWeaponSelected"
      items="{data>/Weapons}">
      <columns>
        <Column width="15%">
        </Column>
        <Column>
        </Column>

        <Column>
        </Column>
        <Column>
        </Column>
        <Column>
        </Column>
        <Column>
        </Column>
        <Column>
        </Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
            <ObjectIdentifier
              title="{data>Name}">
            </ObjectIdentifier>
            <HBox items="{ path: 'data>Stats', templateShareable: false}" columnGap="8px">
              <Text
                text="{data>Stat_Key}: {data>Stat_Value}"/>
            </HBox>
            <Text text="{data>Material_1}"/>
            <Text text="{data>Material_2}"/>
            <Text text="{data>Material_3}"/>
            <Text text="{data>Material_4}"/>
            <Text text="{data>Material_5}"/>
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </WizardStep>
</core:FragmentDefinition>
